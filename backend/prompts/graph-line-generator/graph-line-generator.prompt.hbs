    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "x_values": {
            "type": "array",
            "description": "List of numerical values for the X-axis.",
            "items": {
                "type": "number"
            },
            "minItems": 1
        },
        "y_values": {
            "type": "array",
            "description": "List of numerical values for the Y-axis.",
            "items": {
                "type": "number"
            },
            "minItems": 1
        },
