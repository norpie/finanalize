    "properties": {
        "x_values": {
            "type": "array",
            "description": "List of numerical values representing histogram bin categories or ranges.",
            "items": {
                "type": "integer",
                "minimum": 0
            },
            "minItems": 1
        },
        "y_values": {
            "type": "array",
            "description": "List of numerical values representing the frequency or count for each bin.",
